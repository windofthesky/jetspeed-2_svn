<descriptor-repository version="1.0" isolation-level="read-uncommitted">

   <class-descriptor
   	  class="org.apache.jetspeed.components.persistence.A"
   	  table="A"
   >
      <field-descriptor
         name="id"
         column="ID"
         jdbc-type="INTEGER"
         primarykey="true"
         autoincrement="true"
 
      />
      
      <field-descriptor
         name="name"
         column="NAME"
         jdbc-type="VARCHAR"       
 
      />

     
      <collection-descriptor
         name="bList"
         element-class-ref="org.apache.jetspeed.components.persistence.B"
         auto-delete="true"
     	 auto-update = "true"
      	 auto-retrieve = "true"
      >         
         <inverse-foreignkey field-ref="aId"/>
      </collection-descriptor>
     
   </class-descriptor>

      
      
   <class-descriptor
   	  class="org.apache.jetspeed.components.persistence.B"
   	  table="B"
   >
      <field-descriptor
         name="id"
         column="ID"
         jdbc-type="INTEGER"
         primarykey="true"
         autoincrement="true"
 
      />
      
      <field-descriptor
         name="aId"
         column="A_ID"
         jdbc-type="INTEGER"
      
 
      />
      
      <field-descriptor
         name="name"
         column="NAME"
         jdbc-type="VARCHAR"       
 
      />

     
         
       <reference-descriptor 
      	  name="a" 
      	  class-ref="org.apache.jetspeed.components.persistence.A" 
      	  auto-delete="false"
      	  auto-update = "true"
      	  auto-retrieve = "true"
      	  >
         <foreignkey field-ref="aId"/>
      </reference-descriptor>
     
   </class-descriptor>
 </descriptor-repository>  
  