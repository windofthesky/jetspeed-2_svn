                 msg="errors.range"/>
      <validator name="mask"
                 classname="org.apache.portals.bridges.frameworks.spring.validation.ValidationSupport"
                 method="validateMask"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.mask"/>
                 
   </global>
