<!DOCTYPE plugins SYSTEM "plugins.dtd">
<plugins>
	<!-- This is the system default plugin for Jetspeed -->


	<plugin name="jetspeed" default="true">
		<classname>
  	 	org.apache.jetspeed.persistence.impl.OJBODMGPersistencePlugin
  	 </classname>
 
	 <OJB.path>
  	 	WEB-INF/conf/ojb
 	 </OJB.path> 	
 	 <!-- 
 	 	 - The plugin will resolve the alias based on the
 	 	 - application's root.  Only use use this with
 	 	 - file-system based RDBMSes like HSQL
 	 	 - in stand-alone mode.
 	  -->
 	 <resolveDbAlias>true</resolveDbAlias>
   </plugin>

	<!-- Plugin that points to the test DB -->	
	<plugin name="jetspeed-test" >
		<classname>
  	 	org.apache.jetspeed.persistence.impl.OJBODMGPersistencePlugin
  	 </classname>
 	 <OJB.path>
   	     WEB-INF/conf/ojb
 	  </OJB.path>
	  <override.default.jcd>
  	 	jetspeed-test
 	 </override.default.jcd>
	</plugin>
	<!-- Deployment plugin -->


    <plugin name="jetspeed-deploy" >
		<classname>
  	 	org.apache.jetspeed.persistence.impl.OJBODMGPersistencePlugin
  	 </classname>
 	 <OJB.path>
   	     WEB-INF/conf/ojb
 	  </OJB.path>
	  <override.default.jcd>
  	 	jetspeed-deploy
 	  </override.default.jcd>
	</plugin>	

</plugins>
