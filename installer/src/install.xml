<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>Apache Jetspeed Portal</appname>
        <appversion>2.0 M1</appversion>
        <authors>
            <author name="David Sean Taylor" email="taylor@apache.org"/>
            <author name="Raphael Luta" email="raphael@apache.org"/>
	        <author name="Mark Orciuch" email="mark_oriuch@nqsltd.com"/>
	        <author name="Paul Spencer" email="paulsp@apache.org"/>
	        <author name="Scott Weaver" email="weaver@apache.org"/>
	        <author name="Roger Ruttimann" email="roger.ruttimann@earthlink.net"/>
	        <author name="David Le Strat" email="dlestrat@apache.org"/>
	        <author name="Jeremy Ford" email="jford@apache.org"/>
	        <author name="Ate Douma" email="ate@apache.org"/>
	        <author name="Shinsuke Sugaya" email="shinsuke@apache.org"/>
	        <author name="Randy Walter" email="rwatler@finali.com"/>
        </authors>
        <url>http://portals.apache.org/jetspeed-2</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="680" height="480" resizable="yes"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENSE.TXT"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
	    <res id="Installer.image" src="jetspeed-logo.gif" />
	    <res id="userInputSpec.xml" src="userInputSpec.xml" />	
	    <res id="TargetPanel.dir" src="installdir.txt" />
	    <res id="ProcessPanel.Spec.xml" src="ProcessPanel.Spec.xml" />	
    </resources>
    
    <!-- 
    	
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>   	
	
        <panel classname="LicencePanel"/>
        <panel classname="InfoPanel"/>
        
        <panel classname="UserInputPanel"/>
	    <panel classname="UserInputPanel"/>
	    <panel classname="UserInputPanel"/>
        <panel classname="HelloPanel"/>
        
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>	
	    <panel classname="InstallPanel"/>
	    <panel classname="ProcessPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
      <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="Readme.txt" targetdir="$INSTALL_PATH" override="true"/>
            <file src="LICENSE.TXT" targetdir="$INSTALL_PATH" override="true"/>
            <file src="build.xml" targetdir="$INSTALL_PATH" override="true"/>   
            <file src="build.properties" targetdir="$INSTALL_PATH" override="true"/>        
            <parsable type="javaprop" targetfile="$INSTALL_PATH/build.properties" /> 
	        <parsable type="xml" targetfile="$INSTALL_PATH/build.xml"/>       
      </pack>
      
      <pack name="Apache Ant" required="yes">
        <description>Apache Ant Build Files</description>
        <file src="ant" targetdir="$INSTALL_PATH" override="true"/>
	    
	    <executable targetfile="$INSTALL_PATH/ant/bin/ant" stage="never" type="bin"/>
	    <executable targetfile="$INSTALL_PATH/ant/lib/" stage="never" />
       </pack>
      
       <pack name="SQL (required for new installs)" required="no">
            <description>
            	SQL Scripts (required for new installs).  WARNING!  This will remove ALL existing
            	data from your database!
            </description>
            <file src="sql" targetdir="$INSTALL_PATH"/>                
      </pack>
      
      <pack name="Apache Tomcat (required for new installs)" required="no">
            <description>Apache Tomcat Binaries (required for new installs)</description>
            <file src="tomcat" targetdir="$INSTALL_PATH"/>                
      </pack>
      
      <pack name="Jetspeed Core" required="yes">
            <description>Apache Jetspeed Core Files</description>
            <file src="jetspeed" targetdir="$INSTALL_PATH"/>                
      </pack>
      
      <pack name="Jetspeed Resource Files" required="yes">
            <description>Apache Jetspeed Resource Files</description>
            <file src="resources" targetdir="$INSTALL_PATH"/>  
            <parsable type="xml" targetfile="$INSTALL_PATH/resources/tomcat-users.xml"/>               
      </pack>        



<!--
        <pack name="Docs" required="no">
            <description>The documentation</description>
            <file src="doc" targetdir="$INSTALL_PATH"/> 
        </pack>
-->
    </packs>
    
</installation>
