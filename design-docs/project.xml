<project>
  <extend>${basedir}/../project.xml</extend>
  <id>jetspeed2-design-docs</id>
  <name>Jetspeed-2 Enterprise Portal Design Documentation</name>

  <description>
    Jetspeed is an Open Source implementation of an Enterprise Information 
    Portal, using Java and XML.
  </description>
  <shortDescription>Enterprise Information Portal</shortDescription>

  <repository>                 
    <connection>scm:cvs:pserver:anoncvs@cvs.apache.org:/home/cvspublic:jakarta-jetspeed-2/design-docs</connection>
    <url>http://cvs.apache.org/viewcvs/jakarta-jetspeed-2/design-docs/</url>
  </repository>

  <dependencies>
    <dependency> <!-- Required by FOP v0.20.3 -->
      <id>avalon-framework</id>
      <version>4.1.3</version>
    </dependency>   
    <dependency> <!-- Required by FOP v0.20.3 -->
      <id>batik</id>
      <version>1.1.1</version>
    </dependency>   
    <dependency> <!-- Required by FOP v0.20.3 -->
      <id>logkit</id>
      <version>1.0.1</version>
    </dependency>   
    <dependency>
      <id>fop</id>
      <version>0.20.3</version>
    </dependency>
    <dependency>
      <id>xml-apis</id>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <id>xerces</id>
      <version>2.2.1</version>
    </dependency>
    <dependency>
      <id>xalan</id>
      <version>2.4.1</version>
    </dependency>
   </dependencies>

  <build/>
  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-license-plugin</report>
    <report>maven-linkcheck-plugin</report>
    <report>maven-tasklist-plugin</report>
  </reports>  
</project>
