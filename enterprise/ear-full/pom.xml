<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <prerequisites>
    <maven>2.0.9</maven>
  </prerequisites>

  <!-- POM Identification -->

  <artifactId>jetspeed-enterprise-full</artifactId>
  <parent>
    <groupId>org.apache.portals.jetspeed-2</groupId>
    <artifactId>jetspeed-enterprise</artifactId>
    <version>2.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>    
  <packaging>ear</packaging>
  <name>Jetspeed-2 Full Enterprise Archive</name>

  <!-- Application Dependencies -->
  
  <dependencies>
    <dependency>
      <groupId>org.apache.portals.applications</groupId>
      <artifactId>apa-demo</artifactId>
      <type>war</type>
    </dependency>        
    <dependency>
      <groupId>org.apache.portals.applications</groupId>
      <artifactId>apa-rss-war</artifactId>
      <type>war</type>
    </dependency>        
    <dependency>
      <groupId>org.apache.portals.applications</groupId>
      <artifactId>apa-webcontent-war</artifactId>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.apache.portals.applications</groupId>
      <artifactId>apa-dbbrowser-war</artifactId>
      <type>war</type>
    </dependency>
  </dependencies>

  <!-- POM build -->

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <modules>
            <!-- skinny wars: must be explicitly repackaged below with maven-ear-plugin-skinny-wars -->
            <webModule>
              <groupId>${pom.groupId}</groupId>
              <artifactId>jetspeed-demo</artifactId>
              <contextRoot>/jetspeed</contextRoot>
            </webModule>                                              
            <webModule>
              <groupId>${pom.groupId}</groupId>
              <artifactId>j2-admin</artifactId>
              <contextRoot>/j2-admin</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.apache.portals.applications</groupId>
              <artifactId>apa-demo</artifactId>
              <contextRoot>/demo</contextRoot>
            </webModule>                       
            <webModule>
              <groupId>org.apache.portals.applications</groupId>
              <artifactId>apa-rss-war</artifactId>
              <contextRoot>/rss</contextRoot>
            </webModule>                       
            <webModule>
              <groupId>org.apache.portals.applications</groupId>
              <artifactId>apa-webcontent-war</artifactId>
              <contextRoot>/webcontent</contextRoot>
            </webModule>                       
            <webModule>
              <groupId>org.apache.portals.applications</groupId>
              <artifactId>apa-dbbrowser-war</artifactId>
              <contextRoot>/dbbrowser</contextRoot>
            </webModule>                       

            <!-- skinny wars classpath lib jars -->
            <jarModule>
              <groupId>javax.ccpp</groupId>
              <artifactId>ccpp</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>
            <jarModule>
              <groupId>${pom.groupId}</groupId>
              <artifactId>jetspeed-api</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>
            <jarModule>
              <groupId>${pom.groupId}</groupId>
              <artifactId>jetspeed-commons</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>
            <jarModule>
              <groupId>org.apache.portals.bridges</groupId>
              <artifactId>portals-bridges-common</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>
            <jarModule>                      
              <groupId>org.apache.portals</groupId>
              <artifactId>portlet-api_2.0_spec</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>
            <jarModule>                      
              <groupId>org.apache.portals.pluto</groupId>
              <artifactId>pluto-container-api</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>                                              
            <jarModule>                      
              <groupId>org.apache.portals.pluto</groupId>
              <artifactId>pluto-taglib</artifactId>
              <bundleDir>/lib</bundleDir>
            </jarModule>                                              
          </modules>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>maven-ear-plugin-skinny-wars</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <echo>Building with Ant version: ${ant.version}</echo>
                <!-- unpackage EAR -->
                <delete dir="${project.build.directory}/package-skinny-wars"/>
                <unjar src="${project.build.directory}/${project.build.finalName}.ear" dest="${project.build.directory}/package-skinny-wars"/>
                
                <!-- 
                  JS2-973: Websphere 6.1/IBM JDK5 workaround for "java.lang.TypeNotPresentException: Type javax.xml.bind.annotation.XmlRootElement not present" bug.
                  This is a recognized issue, see for instance: https://issues.apache.org/jira/browse/TUSCANY-2519
                  Workaround is extracting the jaxb-api-2.1.jar from the Jetspeed Portal war and move it to the shared jars within the ear.
                -->
                <mkdir dir="${project.build.directory}/package-skinny-wars/tmp"/>
                <unzip src="${project.build.directory}/package-skinny-wars/jetspeed-demo-${pom.version}.war" dest="${project.build.directory}/package-skinny-wars/lib">
                  <patternset>
                    <include name="WEB-INF/lib/jaxb-api-*.jar"/>
                  </patternset>
                  <mapper type="flatten"/>
                </unzip>
                <move file="${project.build.directory}/package-skinny-wars/jetspeed-demo-${pom.version}.war" todir="${project.build.directory}/package-skinny-wars/tmp"/>
                <zip destfile="${project.build.directory}/package-skinny-wars/jetspeed-demo-${pom.version}.war">
                    <zipfileset src="${project.build.directory}/package-skinny-wars/tmp/jetspeed-demo-${pom.version}.war">
                    <exclude name="WEB-INF/lib/jaxb-api-*.jar"/>
                  </zipfileset>
                </zip>                
                <delete dir="${project.build.directory}/package-skinny-wars/tmp"/>
                <!--  end of JS2-973 workaround -->
                
                <!-- determine skinny wars classpath from lib jars -->
                <pathconvert pathsep=" " property="war.manifest.classpath">
                  <map from="${project.build.directory}${file.separator}package-skinny-wars${file.separator}" to=""/>
                  <path>
                    <fileset dir="${project.build.directory}/package-skinny-wars">
                      <include name="lib/*.jar"/>
                    </fileset>
                  </path>
                </pathconvert>
                <!-- set skinny wars classpath -->
                <jar destfile="${project.build.directory}/package-skinny-wars/jetspeed-demo-${pom.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                <jar destfile="${project.build.directory}/package-skinny-wars/j2-admin-${pom.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                <jar destfile="${project.build.directory}/package-skinny-wars/apa-demo-${org.apache.portals.applications.apa-demo.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                <jar destfile="${project.build.directory}/package-skinny-wars/apa-rss-war-${org.apache.portals.applications.apa-rss.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                <jar destfile="${project.build.directory}/package-skinny-wars/apa-webcontent-war-${org.apache.portals.applications.apa-webcontent.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                <jar destfile="${project.build.directory}/package-skinny-wars/apa-dbbrowser-war-${org.apache.portals.applications.apa-dbbrowser.version}.war" update="true">
                  <manifest>
                    <attribute name="Class-Path" value="${war.manifest.classpath}"/>
                  </manifest>
                </jar>
                
                <!-- Offline deployment infusion of generic APA wars for Jetspeed-2 -->
                <java classname="org.apache.jetspeed.tools.deploy.JetspeedDeploy">
                   <arg value="${project.build.directory}/package-skinny-wars/apa-demo-${org.apache.portals.applications.apa-demo.version}.war"/>
                   <arg value="${project.build.directory}/package-skinny-wars/apa-demo-${org.apache.portals.applications.apa-demo.version}.war"/>
                   <arg value="demo"/>
                </java>
                <java classname="org.apache.jetspeed.tools.deploy.JetspeedDeploy">
                   <arg value="${project.build.directory}/package-skinny-wars/apa-rss-war-${org.apache.portals.applications.apa-rss.version}.war"/>
                   <arg value="${project.build.directory}/package-skinny-wars/apa-rss-war-${org.apache.portals.applications.apa-rss.version}.war"/>
                   <arg value="rss"/>
                </java>
                <java classname="org.apache.jetspeed.tools.deploy.JetspeedDeploy">
                   <arg value="${project.build.directory}/package-skinny-wars/apa-webcontent-war-${org.apache.portals.applications.apa-webcontent.version}.war"/>
                   <arg value="${project.build.directory}/package-skinny-wars/apa-webcontent-war-${org.apache.portals.applications.apa-webcontent.version}.war"/>
                   <arg value="webcontent"/>
                </java>
                <java classname="org.apache.jetspeed.tools.deploy.JetspeedDeploy">
                   <arg value="${project.build.directory}/package-skinny-wars/apa-dbbrowser-war-${org.apache.portals.applications.apa-dbbrowser.version}.war"/>
                   <arg value="${project.build.directory}/package-skinny-wars/apa-dbbrowser-war-${org.apache.portals.applications.apa-dbbrowser.version}.war"/>
                   <arg value="webcontent"/>
                </java>
                
                <!-- repackage EAR with skinny wars -->
                <jar destfile="${project.build.directory}/${project.build.finalName}.ear" basedir="${project.build.directory}/package-skinny-wars" manifest="${project.build.directory}/package-skinny-wars/META-INF/MANIFEST.MF"/>
                <delete dir="${project.build.directory}/package-skinny-wars"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>jetspeed-api</artifactId>
            <version>${pom.version}</version>
          </dependency>        
          <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>jetspeed-deploy-tools</artifactId>
            <version>${pom.version}</version>
          </dependency>        
          <!-- force ant version for plugin -->
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <version>${ant.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>

