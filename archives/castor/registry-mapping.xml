           type="org.apache.jetspeed.om.common.impl.CastorJdoApplication"
           required="true">
      <sql name="application_id"/>
    </field> 
    <field name="portletId" type="long">
      <sql name="portlet_id"/>
    </field> 
    <field name="applicationId" type="long">
