    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>HELP</portlet-mode>
    </supports>
    <portlet-info>
      <title>Profiler Admin</title>
      <short-title>Profiler</short-title>
      <keywords>admin,profiler</keywords>
    </portlet-info>
</portlet>

