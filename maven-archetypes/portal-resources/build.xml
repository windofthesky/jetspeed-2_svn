<project name="portal-archetype-resources" default="help">

    <!-- Usage -->

    <target name="help">
        <echo message="Buildfile for the portal archetype resources maven POM."/>
        <echo message="Usage: ant [ build ]"/>
        <echo message="Where:"/>
        <echo message="    build - build resources for archetype."/>
    </target>

    <!-- Jetspeed Configuration -->

    <target name="build">

        <!-- Assemble required portal webapp resources -->
        <delete dir="${basedir}/target/classes"/>
        <mkdir dir="${basedir}/target/classes"/>
        <copy todir="${basedir}/target/classes">
            <fileset dir="${basedir}/../../src/webapp">
                <exclude name="WEB-INF/pages/**"/>
            </fileset>
        </copy>
        <mkdir dir="${basedir}/target/classes/WEB-INF/pages"/>
        <copy todir="${basedir}/target/classes/WEB-INF/pages">
            <fileset dir="${basedir}/../../src/webapp/WEB-INF/pages">
                <include name="Administrative/**"/>
                <include name="page.security"/>
                <include name="my-account.psml"/>
            </fileset>
        </copy>
        <copy file="${basedir}/../../src/webapp/WEB-INF/pages/minimal-default-page.psml"
              tofile="${basedir}/target/classes/WEB-INF/pages/default-page.psml"/>
        <replace file="${basedir}/target/classes/WEB-INF/pages/default-page.psml"
                 token=" hidden=&quot;true&quot;"/>
        <mkdir dir="${basedir}/target/classes/WEB-INF/classes"/>
        <copy todir="${basedir}/target/classes/WEB-INF/classes">
            <fileset dir="${basedir}/../../etc/db-ojb"/>
        </copy>

    </target>

</project>
